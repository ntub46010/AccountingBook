<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/normal_background"
    tools:context=".RegisterActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilNickName"
        style="@style/til_account"
        android:gravity="center_horizontal"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edtNickname"
            style="@style/edt_account"
            android:hint="您的暱稱"
            android:text="仲佑"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilEmail"
        style="@style/til_account"
        android:layout_below="@id/tilNickName"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edtEmail"
            style="@style/edt_account"
            android:text="zxcveric@yahoo.com.tw"
            android:hint="電子郵件"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilPwd"
        style="@style/til_account"
        android:layout_below="@id/tilEmail"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edtPwd"
            style="@style/edt_account"
            android:hint="密碼"
            android:text="12345678"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRegister"
        style="@style/btn_login"
        android:layout_below="@id/tilPwd"
        android:layout_centerHorizontal="true"
        android:text="註冊"/>

    <Button
        android:id="@+id/btnBack"
        style="@style/btn_login"
        android:layout_below="@id/btnRegister"
        android:layout_centerHorizontal="true"
        android:text="回登入畫面"/>

</RelativeLayout>